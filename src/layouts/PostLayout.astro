---
import BaseLayout from './BaseLayout.astro';

const { frontmatter } = Astro.props;
---
<BaseLayout pageTitle={`${frontmatter.title}`} activeItem="blog">
  <p><i>Posted on {frontmatter.pubDate.toLocaleDateString()}</i></p>
  <div class="tags">{frontmatter.tags.map((tag: string) => <div class="tag">{tag}</div>)}</div>
  <img src={frontmatter.image.url} alt={frontmatter.image.alt}>
  <slot />
</BaseLayout>
<style is:global>
  .tags {
    display: flex;
    gap: 0.5em;
    margin: 1em 0;
  }

  .tag {
    background-color: var(--bgColor-inset);
    padding: 0.2em 0.7em;
    border: 1px solid var(--borderColor-default);
    line-height: 1;
    border-radius: 1em;
    color: var(--fgColor-muted);
  }

  img {
    width: 100%;
    aspect-ratio: 9 / 4;
    object-fit: cover;
    border-radius: 8px;
  }

  p {
    line-height: 1.5;
  }
</style>
